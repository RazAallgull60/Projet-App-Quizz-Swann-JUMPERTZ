<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Question1">


    <Button
        android:id="@+id/reponse4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Button" />

    <Button
        android:id="@+id/reponse3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/reponse4"
        android:text="Button" />

    <Button
        android:id="@+id/reponse2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reponse3"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <Button
        android:id="@+id/reponse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reponse2"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reponse1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#F4F2F2"
        android:textSize="24dp" />


</RelativeLayout>